@model STOCKON.Models.Famille_article

@{
    ViewBag.Title = "Edit";
}

<h2>Modification famille articles</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Famille_article</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle_famille)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle_famille)
            @Html.ValidationMessageFor(model => model.Libelle_famille)
             @Html.HiddenFor(model => model.Id_famille)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Conditionnement)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Conditionnement)
            @Html.ValidationMessageFor(model => model.Conditionnement)
        </div>

        <p>
            <input type="submit" value="Enregistrer" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à la liste des familles d'articles", "Index")
</div>
