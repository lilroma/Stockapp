@model IEnumerable<STOCKON.Models.Famille_article>

@{
    ViewBag.Title = "Famille d'articles";
}

<h2>Famille d'articles</h2>

<p>
    @Html.ActionLink("Nouvelle famille", "Create")
</p>


@using (Html.BeginForm())
{
    <p>
        Rechercher une famille (Libellé) : @Html.TextBox("SearchString") &nbsp;
        <input type="submit" value="Rechercher" /></p>
}
 @{
        var grid = new WebGrid(Model,rowsPerPage : 20);
        @grid.GetHtml(tableStyle:"grid",
        headerStyle:"head",
        alternatingRowStyle: "altrow",
                columns: grid.Columns(
                               grid.Column("Id_famille", "Référence"),
                             grid.Column("Libelle_famille", "Libellé"),
                                      grid.Column("Conditionnement", "Conditionnement"),
                                      grid.Column("", "", format: (item) => Html.ActionLink("Editer", "Edit", new { id = item.Id_famille })),
                                                                                                                  grid.Column("", "", format: (item) => Html.ActionLink("Details", "Details", new { id = item.Id_famille })),
                                                                                                                                                                                  grid.Column("", "", format: (item) => Html.ActionLink("Supprimer", "Delete", new { id = item.Id_famille }))
                                                                                                       
                    )
        
        );
        }


