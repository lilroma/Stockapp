@model STOCKON.Models.Fournisseur

@{
    ViewBag.Title = "Details";
}

<h2>Details sur un fournisseur</h2>

<fieldset>
    <legend>Fournisseur</legend>

    <div class="display-label">Nom</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nom_fournisseur)
    </div>

    <div class="display-label">Prénom</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Prenom_fournisseur)
    </div>

    <div class="display-label">Adresse</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Adresse_fournisseur)
    </div>

    <div class="display-label">Numéro de téléphone</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Telephone_fournisseur)
    </div>

    <div class="display-label">Adresse mail</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Mail__fournisseur)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id=Model.Id_fournisseur }) |
    @Html.ActionLink("Retour à la liste des fournisseurs", "Index")
</p>
