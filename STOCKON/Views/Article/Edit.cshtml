@model STOCKON.Models.Article

@{
    ViewBag.Title = "Modification";
}

<h2>Modification article</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Article</legend>

      
        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle_article)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle_article)
            @Html.ValidationMessageFor(model => model.Libelle_article)
            @Html.HiddenFor(model => model.Qte_article)
            @Html.HiddenFor(model => model.Id_article)
            @Html.HiddenFor(model => model.Code_article)
        </div>

        <div class="editor-label">
            @Html.Label("Famille article")
        </div>
        <div class="editor-field">
            <div class="editor-field">
            @Html.Telerik().AutoComplete().Name("test").BindTo((IEnumerable<String>)ViewData["Famille"]).Value(Model.Famille_article.Libelle_famille + " - " + Model.Id_famille)
        </div>
            
                    </div>

        
        <div class="editor-label">
            @Html.LabelFor(model => model.Stock_critique)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Stock_critique)
            @Html.ValidationMessageFor(model => model.Stock_critique)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prix_grossiste)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Prix_grossiste)
            @Html.ValidationMessageFor(model => model.Prix_grossiste)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prix_detaillant)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Prix_detaillant)
            @Html.ValidationMessageFor(model => model.Prix_detaillant)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Conditionnement)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Conditionnement)
            @Html.ValidationMessageFor(model => model.Conditionnement)
        </div>

        <p>
            <input type="submit" value="Enregistrer" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à la liste des articles", "Index")
</div>
