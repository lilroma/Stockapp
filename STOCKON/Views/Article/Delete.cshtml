@model STOCKON.Models.Article

@{
    ViewBag.Title = "Suppression article";
}

<h2>Supression article</h2>

<h3>Êtes-vous sur de vouloir supprimer cet enregistrement ?</h3>
@Html.ValidationSummary("L'erreur suivante est survenue :")
<fieldset>
    <legend>Article</legend>

   

    <div class="display-label">Libellé</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Libelle_article)
    </div>

    <div class="display-label">Famille articles</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Famille_article.Libelle_famille)
    </div>

    
    <div class="display-label">Stock critique</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Stock_critique)
    </div>

    <div class="display-label">Prix grossiste</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Prix_grossiste)
    </div>

    <div class="display-label">Prix détaillant</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Prix_detaillant)
    </div>

    <div class="display-label">Conditionnement</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Conditionnement)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Supprimer" /> |
        @Html.ActionLink("Retour à la liste des articles", "Index")
    </p>
}
